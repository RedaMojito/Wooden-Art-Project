{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
{{ form_start(form) }}
<div class="container">
    <h1 class="text-center contact-title mt-5">Contacter Nous</h1>
    <div class="row contact-container">
        <div class="col-md-6">
            <div class="form-group mb-4" >
                {{form_row(form.firstname)}}
            </div>
            <div class="form-group mb-4">
                {{form_row(form.lastname)}}
            </div>
            <div class="form-group mb-4" >
                {{form_row(form.phonenumber)}}
            </div>
            <div class="form-group" >
                {{form_row(form.email)}}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" >
                {{form_row(form.message)}}
            </div>
            <button class="btn contact-button"><i class="fa fa-paper-plane" aria-hidden="true"></i>  Envoyer</button>
        </div>
        
    </div>
</div>
{{ form_end(form)}}
{% endblock %}
